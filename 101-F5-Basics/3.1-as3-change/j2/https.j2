{
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.2.0",
        "id": "as3-test-case",
        "label": "as3-test-case",
        "remark": "as3-test-case",
        "{{ as3_tenant_name }}":{
            "class": "Tenant",
            "AS3-Usecase": {
                "class": "Application",
                "serviceMain": {
                    "class": "Service_HTTPS",
                    "virtualAddresses": [
                        "{{ private_ip }}"
                    ],
                    "profileMultiplex": {
                        "bigip": "/Common/oneconnect"
                    },
                    "pool": "app_pool",
                    "serverTLS": {
                        "bigip": "/Common/clientssl"
                    },
                    "persistenceMethods": []
                },
                "app_pool": {
                    "class": "Pool",
                    "monitors": [
                        "http"
                    ],
                    "members": [
                        {
                            "servicePort": 80,
                            "serverAddresses": [
                                {% set comma = joiner(",") %}
                                {% for mem in pool_members %}
                                    {{comma()}} "{{  hostvars[mem]['private_ip']  }}"
                                {% endfor %}

                            ]
                        }
                    ]
                }
            }
        }
    }
}
